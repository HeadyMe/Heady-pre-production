{
  "name": "headybuddy",
  "version": "1.0.0",
  "description": "HeadyBuddy - AI Companion Task Completion Assistant",
  "main": "main.js",
  "author": "Heady Systems",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "puppeteer": "^24.37.3",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.heady.buddy",
    "productName": "HeadyBuddy",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Heady Systems",
      "verifyUpdateCodeSignature": false
    }
  }
}