{
  "allowHosts": [
    "headysystems.com",
    "headymcp.com",
    "headyconnection.com"
  ],
  "allowOrigins": [
    "https://headysystems.com",
    "https://headymcp.com",
    "https://headyconnection.com"
  ],
  "bind": "0.0.0.0",
  "jwt": {
    "audience": "headysystems.com",
    "issuer": "headysystems.com",
    "mode": "hs256",
    "secretEnv": "MCP_GATEWAY_JWT_SECRET"
  },
  "rateLimitPerMin": 60,
  "requireConfirmationFor": [
    "write",
    "delete",
    "rm",
    "exec",
    "shell",
    "edit_file"
  ],
  "servers": [
    {
      "allowedTools": [
        "read_file",
        "list_directory",
        "write_file",
        "search_files"
      ],
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "--root",
        "./src"
      ],
      "command": "npx",
      "name": "filesystem",
      "transport": "stdio"
    }
  ]
}