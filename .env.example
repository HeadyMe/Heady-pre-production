# HEADY SYSTEMS :: EMAIL NOTIFICATION CONFIGURATION
# Copy this file to .env and configure your SMTP settings

# SMTP Server Configuration
HEADY_SMTP_SERVER=smtp.gmail.com
HEADY_SMTP_PORT=587

# SMTP Credentials (required for email notifications)
# For Gmail: Use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
HEADY_SMTP_USER=your-email@gmail.com
HEADY_SMTP_PASSWORD=your-app-password-here

# Email Addresses
HEADY_FROM_EMAIL=heady@hadyconnection.org
HEADY_TO_EMAIL=eric@hadyconnection.org

# Notification Settings (optional)
# HEADY_NOTIFY_ON_CHECKPOINT=true
# HEADY_NOTIFY_ON_ERROR=true
# HEADY_NOTIFY_ON_COMPLETE=true

# === API & Auth ===
HEADY_API_KEY=your-heady-api-key-here
HF_TOKEN=your-huggingface-token-here
ADMIN_TOKEN=your-admin-token-here
RENDER_API_KEY=your-render-api-key-here

# === Cloud Endpoints (Custom Branded Domains) ===
HEADY_ENDPOINT=https://headysystems.com
HEADY_ME_URL=https://headycloud.com
HEADY_SYSTEMS_URL=https://headysystems.com
HEADY_CONNECTION_URL=https://headyconnection.com
HEADY_MCP_URL=https://headymcp.com
HEADY_BUDDY_URL=https://headybot.com
HEADY_DOCS_URL=https://headyio.com
HEADY_STATUS_URL=https://headycheck.com
HEADY_TARGET=Cloud
HEADY_VERSION=3.0.0

# === Service Orchestration ===
HEADY_SERVICE_PROFILE=full
HEADY_ENFORCE_ALL=true
HEADY_TRUST_PROXY=true
ALLOWED_ORIGINS=https://headysystems.com,https://headycloud.com,https://headyconnection.com,https://headymcp.com,https://headybot.com,https://headyio.com,https://headycheck.com,https://headybuddy.org

# === AI Nodes ===
HEADY_ACTIVE_NODES=BRIDGE,BRAIN,CONDUCTOR,SOPHIA,SENTINEL,MURPHY,JANITOR,JULES,OBSERVER,MUSE,NOVA,CIPHER,ATLAS,SASHA,SCOUT,OCULUS,BUILDER,PYTHIA,LENS,MEMORY
HEADY_NODE_COUNT=20
