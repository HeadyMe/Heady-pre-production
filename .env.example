# Heady Project Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it's in .gitignore

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Used by: MCP postgres server, audit trail system
DATABASE_URL=postgresql://admin:your_password_here@localhost:5432/heady_production

# ==============================================================================
# API KEYS
# ==============================================================================

# Heady internal API key for endpoint authentication
# Generate a secure random string (minimum 32 characters recommended)
# Used by: All protected API endpoints
HEADY_API_KEY=heady_sk_prod_your_secure_key_here_32chars_minimum

# External API key for data processing services
# Obtain from your external service provider
OTHER_API_KEY=sk_your_other_api_key_here

# Hugging Face API token for AI model inference
# Obtain from: https://huggingface.co/settings/tokens
# Used by: /api/hf/* endpoints
HF_TOKEN=hf_your_huggingface_token_here

# ==============================================================================
# CLOUDFLARE CONFIGURATION
# ==============================================================================

# Cloudflare API token
# Obtain from: Cloudflare Dashboard → My Profile → API Tokens
# Required permissions: Workers, CDN, DNS (as needed)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Cloudflare account ID
# Find at: Cloudflare Dashboard → Account Home (in URL or sidebar)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# ==============================================================================
# MODEL CONFIGURATION (Optional)
# ==============================================================================

# Default Hugging Face text generation model
# Defaults to: gpt2
HF_TEXT_MODEL=gpt2

# Default Hugging Face embedding model
# Defaults to: sentence-transformers/all-MiniLM-L6-v2
HF_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ==============================================================================
# SERVER CONFIGURATION (Optional)
# ==============================================================================

# Server port
# Defaults to: 3300
PORT=3300

# Node environment
# Options: development, production, test
NODE_ENV=development
